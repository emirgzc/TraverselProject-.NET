@model List<VisitorModel>

@{
    ViewData["Title"] = "VisitorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Şehir/Ülke</th>
                                    <th>Mail</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.VisitorID</td>
                                        <td>@item.Name @item.Surname</td>
                                        <td>@item.City/@item.Country</td>
                                        <td>@item.Mail</td>
                                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID" class="btn-sm btn-danger">Sil</a></td>
                                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID" class="btn-sm btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>                       
                    </div>
                </div>
            </div>           
        </div>
        <a href="/Admin/VisitorApi/AddVisitor/" class="btn-sm btn-success">Yeni Ekle</a>
    </div>
</div>

