@model List<AppRole>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<div class="active-member">
					<div class="table-responsive">
						<table class="table table-xs mb-0">
							<thead>
								<tr>
									<th>#</th>
									<th>Rol Adı</th>
									<th>Rolü Sil</th>
									<th>Rolü Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@if (Model.Count > 0)
								{
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.Id</td>
											<td>@item.Name</td>
											<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn-sm btn-danger">Sil</a></td>
											<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn-sm btn-success">Güncelle</a></td>
										</tr>
									}
								}
								else
								{
									<tr>
										<td class="alert alert-success">Herhangi bir rol bulunamadı</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<a href="/Admin/Role/AddRole" class="btn btn-success">Yeni Ekle</a>