
@model List<ApiMovieModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4>IMDB TOP 100 Movie</h4>

<br />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Title</th>
                                    <th>Açıklama</th>
                                    <th>Resim</th>
                                    <th>Imdb Puanı</th>
                                    <th>Yapım Yılı</th>
                                    <th>Fragman</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.rank</td>
                                        <td>@item.title</td>
                                        <td>@item.description</td>
                                        <td><img src="@item.image" height="50"/></td>
                                        <td>@item.rating</td>
                                        <td>@item.year</td>
                                        <td><a href="#" class="btn-sm btn-dark">Fragman</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
