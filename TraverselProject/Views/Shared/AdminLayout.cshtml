@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@await Html.PartialAsync("~/Views/AdminLayoutPartial/HeaderPartial.cshtml")
<body>
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <div id="main-wrapper">
        @await Html.PartialAsync("~/Views/AdminLayoutPartial/TopBarPartial.cshtml")
        @await Html.PartialAsync("~/Views/AdminLayoutPartial/SidebarPartial.cshtml")
        <div class="content-body">
            <div class="container-fluid mt-3">
                @RenderBody()
            </div>
        </div>
        @await Html.PartialAsync("~/Views/AdminLayoutPartial/FooterPartial.cshtml")
    </div>
    @await Html.PartialAsync("~/Views/AdminLayoutPartial/ScriptPartial.cshtml")
</body>
</html>